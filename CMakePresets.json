{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 19,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "debug",
        "description": "Configure with Debug build type",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_CXX_STANDARD": "20",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
      },
      {
        "name": "release",
        "description": "Configure with Release build type",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_CXX_STANDARD": "20",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "debug",
        "description": "Build Debug configuration",
        "configurePreset": "debug",
        "jobs": 4
      },
      {
        "name": "release",
        "description": "Build Release configuration",
        "configurePreset": "release",
        "jobs": 4
      }
    ],
    "testPresets": [
      {
        "name": "debug",
        "description": "Test Debug configuration",
        "configurePreset": "debug"
      },
      {
        "name": "release",
        "description": "Test Release configuration",
        "configurePreset": "release"
      }
    ]
  }
  